{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6", "dom", "es7", "es2017"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "declaration": true,
    "skipLibCheck": true,
    "strict": true,
    "importHelpers": true,
    "removeComments": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src/*"],
  "exclude": [
    "node_modules/*",
    "dist",
    "./node_modules/@types/node/index.d.ts"
  ]
}
